<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Institution</th>
    <th>Phone</th>
    <th>Letter</th>
    <th>Resume</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= profile.user %></td>
    <td><%= profile.institution %></td>
    <td><%= profile.phone %></td>
    <td><%= profile.letter %></td>
    <td><%= profile.resume %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

