<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Full Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :institution, "Institutional Affiliation" %><br />
    <%= f.text_field :institution %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :address1, "Address Line 1" %><br />
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :address2, "Address Line 2" %><br />
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city, "City" %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state, "State/Province/Region" %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip, "ZIP/Postal Code" %><br />
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :country, "Country" %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :letter, "Letter of Intent" %><br />
    <% if @profile.letter? %>
      <%= link_to "Current letter of intent", @profile.letter.url, :target => "_blank" %><br>
      <%= f.check_box :remove_letter %>
      Remove current letter<br>
      Upload a new letter:<br>
    <% end %>    
    <%= f.file_field :letter %>
  </div>
  <div class="actions">
    <%= f.submit :class => "button" %>
  </div>
<% end %>
