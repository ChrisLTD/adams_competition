<h1>Listing pages</h1>

<table>
  <tr class="header">
    <td>Title</td>
    <td>Slug</td>
    <td>Content</td>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.slug %></td>
    <td><%= truncate page.content, :length => 128 %></td>
  </tr>
  <tr>
    <td colspan="3"><%= link_to 'Show', page %>  &nbsp;&nbsp; <%= link_to 'Edit', edit_page_path(page) %> &nbsp;&nbsp; <%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %><br><br></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', new_page_path %>
